<?xml version="1.0" encoding="UTF-8"?>
<viewsettings>
    <scheme name="real world">
        <opengl antialiase="1" dither="1"/>
        <background backgroundColor="82,82,82" showGrid="0" gridXSize="100" gridYSize="100"/>
        <!-- Add the highD highway image as background -->
        <decal filename="/Users/shahi/Developer/Project-highD/data/highd/dataset/02_highway.png" 
               centerX="2000" 
               centerY="10" 
               width="6000" 
               height="50" 
               rotation="0"
               layer="-1"
               screenRelative="0"/>
   <!-- Visualization settings for better view -->
        <vehicles vehicleQuality="2" 
                  vehicleSize="1.5" 
                  vehicleText.show="1"
                  vehicleText.size="20"/>
        
        <!-- Road markings -->
        <edge edgeWidth="1.2" 
              edgeName.show="0"/>
        
        <legend showSizeLegend="0"/>
    </scheme>
    
    <!-- VIEWPORT SETTINGS - Adjust these for your screen -->
    <!-- Lower zoom (e.g., 150) = see more road, smaller vehicles -->
    <!-- Higher zoom (e.g., 600) = see less road, bigger vehicles -->
    
    <!-- Wide view (good for 1920x1080 screens) -->
    <viewport zoom="180" x="2000" y="10" angle="0"/>
    
    <!-- Alternative: Close-up view -->
    <!-- <viewport zoom="500" x="2000" y="10" angle="0"/> -->
    
    <!-- Alternative: Follow traffic view -->
    <!-- <viewport zoom="300" x="1000" y="10" angle="0"/> -->
    
    <delay value="20"/>
</viewsettings>